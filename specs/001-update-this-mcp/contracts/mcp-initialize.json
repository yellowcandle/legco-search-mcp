{
  "openapi": "3.0.0",
  "info": {
    "title": "MCP Initialize Contract",
    "version": "2025-06-18",
    "description": "Contract for MCP protocol initialization with version negotiation"
  },
  "paths": {
    "/sse": {
      "post": {
        "summary": "Initialize MCP connection via HTTP/SSE",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "method": {
                    "type": "string",
                    "enum": ["initialize"],
                    "description": "MCP method name"
                  },
                  "params": {
                    "type": "object",
                    "properties": {
                      "protocolVersion": {
                        "type": "string",
                        "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
                        "description": "Requested MCP protocol version"
                      },
                      "capabilities": {
                        "type": "object",
                        "description": "Client capabilities"
                      }
                    },
                    "required": ["protocolVersion", "capabilities"]
                  },
                  "id": {
                    "type": "integer",
                    "description": "Request ID"
                  }
                },
                "required": ["method", "params", "id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful initialization",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "object",
                      "properties": {
                        "protocolVersion": {
                          "type": "string",
                          "description": "Negotiated protocol version"
                        },
                        "capabilities": {
                          "type": "object",
                          "description": "Server capabilities"
                        },
                        "serverInfo": {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string",
                              "example": "legco-search-mcp"
                            },
                            "version": {
                              "type": "string",
                              "example": "1.0.0"
                            }
                          }
                        }
                      },
                      "required": ["protocolVersion", "capabilities", "serverInfo"]
                    },
                    "id": {
                      "type": "integer",
                      "description": "Response ID matching request"
                    }
                  },
                  "required": ["result", "id"]
                }
              }
            }
          },
          "400": {
            "description": "Invalid protocol version or unsupported capabilities",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "integer",
                          "example": -32602
                        },
                        "message": {
                          "type": "string",
                          "example": "Unsupported protocol version"
                        }
                      }
                    },
                    "id": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}