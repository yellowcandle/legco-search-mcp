{
  "openapi": "3.0.0",
  "info": {
    "title": "Version Information Contract",
    "version": "1.0.0",
    "description": "Contract for retrieving MCP server version information and compatibility"
  },
  "paths": {
    "/version": {
      "get": {
        "summary": "Get server version information",
        "description": "Returns current server version, supported protocols, and compatibility information",
        "responses": {
          "200": {
            "description": "Version information retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "currentVersion": {
                      "type": "string",
                      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
                      "description": "Currently deployed MCP protocol version",
                      "example": "2025-06-18"
                    },
                    "supportedVersions": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                      },
                      "description": "All supported MCP protocol versions",
                      "example": ["2024-11-05", "2025-06-18"]
                    },
                    "latestVersion": {
                      "type": "string",
                      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
                      "description": "Latest available MCP protocol version",
                      "example": "2025-06-18"
                    },
                    "updateStatus": {
                      "type": "string",
                      "enum": ["stable", "updating", "rollback", "failed"],
                      "description": "Current update status",
                      "example": "stable"
                    },
                    "compatibility": {
                      "type": "object",
                      "properties": {
                        "breakingChanges": {
                          "type": "boolean",
                          "description": "Whether current version has breaking changes",
                          "example": false
                        },
                        "clientCompatibility": {
                          "type": "string",
                          "enum": ["full", "partial", "none"],
                          "description": "Level of client compatibility",
                          "example": "full"
                        }
                      }
                    }
                  },
                  "required": ["currentVersion", "supportedVersions", "latestVersion", "updateStatus"]
                }
              }
            }
          }
        }
      }
    }
  }
}